{
  "name": "commit-craft",
  "displayName": "Commit Craft",
  "description": "A VSCode extension to generate commit messages based on Git diffs using AI.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:commit-helper.generate"
  ],
  "main": "./extension.js",
  "contributes": {
    "menus": {
      "scm/title": [
        {
          "command": "commitMessageGenerator.generateCommitMessage",
          "when": "scmProvider == git",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "commitMessageGenerator.generateCommitMessage",
        "title": "ðŸ”¨",
        "description": "Generate commit message"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Okaymisba/Commit-Craft"
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "axios": "^1.8.2",
    "simple-git": "^3.27.0"
  }
}